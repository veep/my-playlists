<div class="container">
  <h2>Spotify playlists for {{user_id}}</h2>
  <div class="row">
    <div class="col s12 m6">
      <h4>
        Your "My Playlists" Playlists
      </h4>
      <ul>
        {{#each playlists.managed}}
        <li>
          <a href="/playlist/{{this.id}}?owner={{encode_uri_component this.owner.id}}&ss={{encode_uri_component this.snapshot_id}}">{{this.name}}</a> ({{this.tracks.total}} tracks)
        </li>
        {{else}}
          <li>None yet!</li>
        {{/each}}
      </ul>
      {{#unless existing_managed.[3plus] }}
        <p>
        <form action="/playlist-maker" method="POST" class="actions">
          <button type="submit" class="btn">
            Make "3-5 Stars"
          </button>
          <input type="hidden" name="rating_min" value="3">
          <input type="hidden" name="rating_max" value="5">
        </form>
        </p>
      {{/unless}}
      {{#unless existing_managed.[4plus] }}
        <p>
        <form action="/playlist-maker" method="POST" class="actions">
          <button type="submit" class="btn">
            Make "4-5 Stars"
          </button>
          <input type="hidden" name="rating_min" value="4">
          <input type="hidden" name="rating_max" value="5">
        </form>
        </p>  
      {{/unless}}
      {{#unless existing_managed.[5] }}
        <p>
        <form action="/playlist-maker" method="POST" class="actions">
          <button type="submit" class="btn">
            Make "5 Stars"
          </button>
          <input type="hidden" name="rating_min" value="5">
          <input type="hidden" name="rating_max" value="5">
        </form>
        </p>
      {{/unless}}
      <h4>
        Your Private Playlists
      </h4>
      <ul>
        {{#each playlists.all_private}}
        <li>
          <a href="/playlist/{{this.id}}?owner={{encode_uri_component this.owner.id}}&ss={{encode_uri_component this.snapshot_id}}">{{this.name}}</a> ({{this.tracks.total}} tracks)
        </li>
        {{/each}}
      </ul>

      <h4>
        Your Public Playlists
      </h4>
      <ul>
        {{#each playlists.all_public}}
        <li>
          <a href="/playlist/{{this.id}}?owner={{encode_uri_component this.owner.id}}&ss={{encode_uri_component this.snapshot_id}}">{{this.name}}</a> ({{this.tracks.total}} tracks)
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="col s12 m6">
      <h4>
        Collaborative Playlists
      </h4>
      <ul>
        {{#each playlists.collaborative}}
        <li>
          <a href="/playlist/{{this.id}}?owner={{encode_uri_component this.owner.id}}&ss={{encode_uri_component this.snapshot_id}}">{{this.name}}</a> ({{this.tracks.total}} tracks)
        </li>
        {{/each}}
      </ul>

      <h4>
        Playlists You Follow
      </h4>
      <ul>
        {{#each playlists.following}}
        <li>
          <a href="/playlist/{{this.id}}?owner={{encode_uri_component this.owner.id}}&ss={{encode_uri_component this.snapshot_id}}">{{this.name}}</a> ({{this.tracks.total}} tracks)
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
